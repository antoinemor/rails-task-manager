<h1>Tasks list</h1>

<% @tasks.each do |task| %>
  <% status = task.done ? 'Done' : 'Not done' %>
  <p>
    <strong><%= task.description %>: </strong><%= status %>
    <%= link_to "Edit", edit_task_path(task) %>
    <%= link_to "Delete", task_path(task),
          method: :delete,
          data: { confirm: "Are you sure?" } %>
  </p>
<% end %>

<%= link_to "Add a task", tasks_new_path %>
